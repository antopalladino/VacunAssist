extends layout

block content 

	<div class="container-fluid">

		<div class="row"><div class="col-3"></div>
			<div class="col-6">
				<h1>Modificar mis datos</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">	

				<form method="post" action="./misDatos">
					

					<div class="col-3"><span>Centro Preferencia:</span></div>
					<div class="col-7">
						<select name="centroId"  class="form-control" required="">
							<option value="" selected="selected" >#{paciente.centroId}</option>
							<!-- cambiar id por nombre-->
							<option value="1">Zona Terminal</option>
							<option value="2">Plaza Moreno</option>
							<option value="3">Zona Cementerio</option>
						</select></div>
						<div class="col-3"><span> Paciente de riesgo</span> </div>
						<div class="col-7">
						<select name="esRiesgo"  class="form-control" required="">
							<option value="" selected="selected">#{paciente.esRiesgo}</option>
							<option value="No">No</option>
							<option value="Si">Si</option>
						</select>
						</div>
						<input type="submit" class="btn btn-outline-success" value="Modificar datos" class="form-control"/>


				</form>
				<form method="get" action="./inicioPaciente">
					<div class="col-7"><input type="submit" class="btn btn-warning" value="Ir al inicio" class="form-control"/></div>
				</form>


				</div>
			</div>


	</div>