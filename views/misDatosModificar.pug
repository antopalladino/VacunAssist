extends layout

block content 

	<div class="container-fluid">

		<div class="row"><div class="col-3"></div>
			<div class="col-6">
				<h1>Mis datos</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">	

				<form method="post" action="./misDatosModificar">
					
					<div class="col-7"><input type="hidden" id="email" >#{paciente.email}</span></div>
					<div class="col-3"><span>Nombre:</span></div>
					<div class="col-7"><span id="nombre">#{paciente.nombre}</span></div>
					<div class="col-3"><span>Apellido:</span></div>
					<div class="col-7"><span id="apellido">#{paciente.apellido}</span></div>
					<div class="col-3"><span> DNI:</span></div>
					<div class="col-7"><span id="dni" ></span>#{paciente.dni}</div>
					<div class="col-3"><span>Fecha Nacimiento:</span></div>
					<div class="col-7"><span name="fechaNacimiento">#{paciente.fechaNacimiento}</span></div>
					<div class="col-3"><span>Genero:</span></div>
					<div class="col-7"><span name="genero">#{paciente.genero}</span></div>
					<div class="col-3"><span>Centro Preferencia:</span></div>
					<div class="col-7">
						<select id="origen" name="centro" class="form-control" required="">
							<option value="" selected="selected" >#{paciente.centro}</option>
							<option value="1">Zona Terminal</option>
							<option value="2">Plaza Moreno</option>
							<option value="3">Zona Cementerio</option>
						</select></div>
						<div class="col-3"><span> Paciente de riesgo</span> </div>
						<div class="col-7">
						<select id="esRiesgo" name="esriesgo" class="form-control" required="">
							<option value="" selected="selected">#{paciente.esRiesgo}</option>
							<option value="No">No</option>
							<option value="Si">Si</option>
						</select>
						</div>
						<input type="submit" class="btn btn-outline-success" value="Modificar datos" class="form-control"/>
						<button type="button" class="btn btn-outline-danger" onclick="document.forms[`modificarmail`].submit();">Modificar mail</button>
						<button type="button" class="btn btn-outline-danger" onclick="document.forms[`modificarcontrasenia`].submit();">Modificar contrase√±a</button>


					</form>
					<form id="modificarmail" method="get" action="./modificarMail"></form>
					<form id="modificarcontrasenia" method="get" action="./modificarContrasenia"></form>



				</div>
			</div>


	</div>