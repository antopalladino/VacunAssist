extends layout

block content

	<div class="container-fluid">

		<div class="row"><div class="col-3"></div>
			<div class="col-6">
				<h1>Modificar mail</h1>
			</div>
		</div>

		<div class="row">
			<div class="col-3"></div>
			<div class="col-6">	

				<form method="post" action="./modificarMail">
					<div class="form-group">
						<div class="row">
							<div class="col-10"><h5>Ingresa tu nuevo mail</h5></div>
							<div class="col-3"><label>E-Mail:</label></div>
							<div class="col-7"><input name="email" type="email" class="form-control" required="required"/></div>
							<div class="col-3"><label>Contrase&ntilde;a:</label></div>
							<div class="col-7"><input name="clave" type="password" class="form-control" required="required"/></div>
							<div class="col-3"></div>
							<div class="col-7"><input type="submit" class="btn btn-outline-success" value="Ingresar" class="form-control"/></div>

						</div>
					</div>
				</form>
				<form method="get" action="./inicioPaciente">
					<div class="col-7"><input type="submit" class="btn btn-warning" value="Ir al inicio" class="form-control"/></div>
				</form>
				<span name="nuevomail"> #{nuevomail}</span>
			</div>
		</div>
	</div>